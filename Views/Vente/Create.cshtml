@model MagasinMVC.Models.ViewModels.CreerVenteViewModel

<h2>Créer une vente</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Magasin</label>
        <select asp-for="MagasinId" class="form-control" asp-items="Model.ListeMagasins"></select>
    </div>

    <div class="form-group">
        <label>Produit</label>
        <select asp-for="ProduitId" class="form-control" asp-items="Model.ListeProduits"></select>
    </div>

    <div class="form-group">
        <label>Quantité</label>
        <input asp-for="Quantite" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Valider la vente</button>
</form>
