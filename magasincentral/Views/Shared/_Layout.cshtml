<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MagasinMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MagasinMVC.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MagasinMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="produitsDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Produits
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="produitsDropdown">
                                <li><a class="dropdown-item" asp-controller="Produit" asp-action="CreateProduct">Créer
                                        un produit</a></li>
                                <li><a class="dropdown-item" asp-controller="Stock" asp-action="Index">Stock central</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="ventesDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Ventes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="ventesDropdown">
                                <li><a class="dropdown-item" asp-controller="Vente" asp-action="Create">Créer une
                                        vente</a></li>
                                <li><a class="dropdown-item" asp-controller="Rapport" asp-action="Index">Rapport</a>
                                </li>
                                <li><a class="dropdown-item" asp-controller="Performance"
                                        asp-action="Index">Performance</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="magasinsDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Magasins
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="magasinsDropdown">
                                <li><a class="dropdown-item" asp-controller="Magasin" asp-action="Index">Magasins</a>
                                </li>
                                <li><a class="dropdown-item" asp-controller="Magasin" asp-action="Create">Créer</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MagasinMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
