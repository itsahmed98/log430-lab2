@model magasincentral.Models.Magasin

<h2>Créer un magasin</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nom"></label>
        <input asp-for="Nom" class="form-control" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quartier"></label>
        <input asp-for="Quartier" class="form-control" />
        <span asp-validation-for="Quartier" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
</form>
